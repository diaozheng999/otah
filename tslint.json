{
  "extends": ["tslint:latest"],

  "rulesDirectory": ["tslint-no-focused-test"],

  "linterOptions": {
    "exclude": [
      "coverage/**"
    ]
  },

  "rules": {
    "indent": [true, "spaces", 2],
    "max-line-length": [true, 80],
    "one-line": [true, "check-catch", "check-finally", "check-else", "check-whitespace"],
    "no-submodule-imports": [true, "rxjs"]
  }
}
